{
  "compilerOptions": {
    "target": "es2016",
    "module": "node16",
    "rootDir": "src",
    "resolveJsonModule": true,
    "maxNodeModuleJsDepth": 10,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}